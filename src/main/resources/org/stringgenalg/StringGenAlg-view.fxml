<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="340.0" prefWidth="450.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.stringgenalg.StringGenAlgController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <ToolBar prefHeight="40.0" prefWidth="200.0">
        <items>
          <Button mnemonicParsing="false" onAction="#onClickSettings" text="Settings" />
        </items>
      </ToolBar>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label text="Target String: ">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextField fx:id="inputString" />
            <Button mnemonicParsing="false" onAction="#onClickStart" text="Start" />
            <Button mnemonicParsing="false" onAction="#onClickReset" text="Reset" />
         </children>
      </HBox>
      <VBox prefHeight="353.0" prefWidth="350.0">
         <children>
            <HBox>
               <children>
                  <Label text="Population Size: ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="getPopSize">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Mutation Rate: ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="getMutRate">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Generations: ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="getGen">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Best Fitness: ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="getBestFit">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Match: ">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Label fx:id="getMatch">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children></VBox>
      <Label fx:id="exportLabel" />
      <HBox prefHeight="35.0" prefWidth="351.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onClickCSV" text="Export to CSV" />
         </children>
      </HBox>
   </children>
</VBox>
